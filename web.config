<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="index.js" verb="*" modules="iisnode"/>
    </handlers>

    <rewrite>
      <rules>
        <rule name="NodeJS">
          <match url="/*" />
          <action type="Rewrite" url="index.js"/>
        </rule>
      </rules>
    </rewrite>

    <iisnode loggingEnabled="true" />
  </system.webServer>
</configuration>
